{
  "manifest_version": 3,
  "name": "AnalyzeIt",
  "version": "1.0",
  "description": "Analyse your browsing and utilize it to be more productive",

  "permissions": [
    "tabs",
    "storage",
    "idle",
    "alarms",
    "identity"
  ],

  "host_permissions": [
    "https://api.weather.com/*",
    "https://*.firebaseio.com/*",
    "https://*.googleapis.com/*",
    "<all_urls>"
  ],

  "oauth2": {
    "client_id": "360272389486-j0u6jjppdo0bbbvrlhbc191ra1q3tdu9.apps.googleusercontent.com",
    "scopes": [
      "openid",
      "email",
      "profile"
    ]
  },

  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },

  "action": {
    "default_title": "AnalyzeIt",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }],

  "options_page": "dashboard/index.html",

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}